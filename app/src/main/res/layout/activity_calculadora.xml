<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4472C4"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="40dp"

    android:orientation="vertical">
    <EditText
        android:id="@+id/Etiqueta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_borrar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ED7D31"
            android:text="BORRAR"
            android:textSize="20sp"
            android:textColor="#FAFAFA"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        >

        <Button
            android:id="@+id/btn_siete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"/>
        <Button
            android:id="@+id/btn_ocho"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"/>
        <Button
            android:id="@+id/btn_nueve"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"/>

        <Button
            android:id="@+id/btn_resta"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        >

        <Button
            android:id="@+id/btn_cuatro"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"/>
        <Button
            android:id="@+id/btn_cinco"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"/>
        <Button
            android:id="@+id/btn_seis"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"/>
        <Button
            android:id="@+id/btn_suma"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        >

        <Button
            android:id="@+id/btn_uno"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"/>
        <Button
            android:id="@+id/btn_dos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"/>
        <Button
            android:id="@+id/btn_tres"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="3"/>
        <Button
            android:id="@+id/btn_multiplicar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:text="*"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        >

        <Button
            android:id="@+id/btn_cero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="0"/>
        <Button
            android:id="@+id/btn_punto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="."/>
        <Button
            android:id="@+id/btn_igual"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="/>
        <Button
            android:id="@+id/btn_dividir"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:text="/"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>